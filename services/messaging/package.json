{
  "name": "@tripcomposer/messaging-service",
  "version": "1.0.0",
  "description": "HowWePlan Messaging Service - Platform chat, contact masking, and message retention",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
