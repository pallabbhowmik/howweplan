# ============================================================================
# ADMIN WEB APP - ENVIRONMENT CONFIGURATION
# ============================================================================
# This file contains all environment variables required by the Admin Web App.
# Copy this file to .env.local and fill in appropriate values.
#
# SECURITY NOTICE:
# - This is a FRONTEND application - only NEXT_PUBLIC_* variables are allowed
# - NO secrets, database credentials, or private API keys permitted
# - All sensitive operations are handled by backend services
# ============================================================================

# ----------------------------------------------------------------------------
# APP METADATA
# ----------------------------------------------------------------------------
# Application identification and versioning
NEXT_PUBLIC_APP_NAME=TripComposer Admin
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# ----------------------------------------------------------------------------
# API CONNECTIVITY
# ----------------------------------------------------------------------------
# Backend API endpoints - all admin operations go through these
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT_MS=30000

# WebSocket for real-time audit events and notifications
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws

# ----------------------------------------------------------------------------
# AUTHENTICATION (Supabase)
# ----------------------------------------------------------------------------
# Public Supabase credentials - safe for frontend exposure
# These are anon/public keys, NOT service role keys
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ----------------------------------------------------------------------------
# FEATURE TOGGLES
# ----------------------------------------------------------------------------
# Control feature availability without code changes
NEXT_PUBLIC_FEATURE_BULK_ACTIONS=true
NEXT_PUBLIC_FEATURE_ADVANCED_FILTERS=true
NEXT_PUBLIC_FEATURE_EXPORT_CSV=true
NEXT_PUBLIC_FEATURE_REAL_TIME_AUDIT=true

# ----------------------------------------------------------------------------
# OPERATIONAL LIMITS
# ----------------------------------------------------------------------------
# UI constraints and pagination defaults
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=25
NEXT_PUBLIC_MAX_PAGE_SIZE=100
NEXT_PUBLIC_AUDIT_LOG_RETENTION_DAYS=90
NEXT_PUBLIC_SESSION_TIMEOUT_MINUTES=30

# ----------------------------------------------------------------------------
# OBSERVABILITY
# ----------------------------------------------------------------------------
# Client-side error tracking and analytics (public keys only)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ANALYTICS_ID=

# ----------------------------------------------------------------------------
# MICROSERVICE BASE URLs (Admin Services page)
# ----------------------------------------------------------------------------
# These base URLs are used by the Admin Dashboard to check real-time health.
# Health endpoints are derived automatically (e.g., /health or /api/v1/health).
#
# NOTE: Matching is event-driven; leave empty if no HTTP endpoint.
NEXT_PUBLIC_SERVICE_HEALTH_TIMEOUT_MS=2000

NEXT_PUBLIC_SERVICE_SUPABASE_REST_URL=http://localhost:54321
NEXT_PUBLIC_SERVICE_AUDIT_URL=http://localhost:3010
NEXT_PUBLIC_SERVICE_IDENTITY_URL=http://localhost:3011
NEXT_PUBLIC_SERVICE_REQUESTS_URL=http://localhost:3012
NEXT_PUBLIC_SERVICE_MATCHING_URL=
NEXT_PUBLIC_SERVICE_ITINERARIES_URL=http://localhost:3014
NEXT_PUBLIC_SERVICE_BOOKING_PAYMENTS_URL=http://localhost:3015
NEXT_PUBLIC_SERVICE_MESSAGING_URL=http://localhost:3016
NEXT_PUBLIC_SERVICE_DISPUTES_URL=http://localhost:3017
NEXT_PUBLIC_SERVICE_REVIEWS_URL=http://localhost:3018
NEXT_PUBLIC_SERVICE_NOTIFICATIONS_URL=http://localhost:3019
