# ============================================================================
# HowWePlan - Local Development Environment
# ============================================================================
# Copy this file to .env and fill in your Supabase credentials
# ============================================================================

# Supabase Cloud (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres.[project-id]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_ISSUER=tripcomposer
JWT_AUDIENCE=tripcomposer-services

# Event Bus
EVENT_BUS_API_KEY=dev-event-bus-api-key-16

# Internal Service Keys (dev placeholders)
INTERNAL_API_KEY=dev-internal-api-key-32-characters
INTERNAL_SERVICE_SECRET=dev-internal-secret-32-characters
INTERNAL_SERVICE_TOKEN=dev-internal-service-token

# Cloudinary (REQUIRED for messaging)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Encryption
EVIDENCE_ENCRYPTION_KEY=dev-encryption-key-32-characters

# Application
NODE_ENV=development
LOG_LEVEL=info
GATEWAY_PORT=8081
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:3003

# Email (console = log only, no real emails)
EMAIL_PROVIDER=console
EMAIL_FROM_ADDRESS=noreply@howweplan.dev
